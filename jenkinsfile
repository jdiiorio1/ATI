// prueba de jenkins file
pipeline {
    agent any
    stages {
        stage('build') {
            steps {

                withCredentials([usernamePassword(credentialsId: 'usuario_virtuales', usernameVariable: 'usuario', passwordVariable: 'password')]) {
                    sh "echo ${user}"
                    sh 'ansible-playbook -i inventory test_ping.yaml ' +
                    ' -e user=' + usuario +
                    ' -e pass=${password} -v'
                    
                }

                echo "Hello World!"
            }
        }
    }
}
