// prueba de jenkins file
pipeline {
    agent any
    stages {
        stage('build') {
            steps {

                withCredentials([usernamePassword(credentialsId: 'usuario_virtuales', userVariable: 'usuario', passwordVariable: 'password')]) {
                sh 'ansible-playbook -i inventory test_ping.yaml ' +
                    ' -e user=' + userVariable +
                    ' -e pass=${passwordVariable} -v'
                    
                }

                echo "Hello World!"
            }
        }
    }
}
